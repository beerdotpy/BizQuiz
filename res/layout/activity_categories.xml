<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bqhomescreen1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Categories" >
 
 
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
         >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:dividerPadding="1dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/category1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/button_bg"
                android:padding="5dp"
                android:text="Biz Update"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/category2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="Brandology"
                android:padding="5dp"                
                android:layout_marginLeft="10dp" 
                android:textSize="14sp"
                android:typeface="sans" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/category3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="WhatDFact"
                android:padding="5dp"                
                android:layout_marginRight="10dp" 
                android:textSize="14sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/category4"
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="Bizness.inc"
                android:padding="5dp"                
                android:layout_marginLeft="10dp" 
                android:textSize="14sp"
                android:typeface="sans" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/category5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="CryptiClues"
                android:padding="5dp"                
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:typeface="sans"  />

            <Button
                android:id="@+id/category6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="Q oftheDay"
                android:padding="5dp"                
                android:layout_marginLeft="10dp" 
                android:textSize="14sp"
                android:typeface="sans" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/category7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="Biz Jargons"
                android:padding="5dp"                
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/category8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:alpha="0.8"
                android:text="Hot Stocks"
                android:padding="5dp"                
                android:layout_marginLeft="10dp" 
                android:textSize="14sp"
                android:typeface="sans"  />
        </TableRow>
    </TableLayout>

     <com.daexsvnzie.tvjdzhqkcm161203.AdView
	xmlns:ap="http://schemas.android.com/apk/res-auto"
	android:id="@+id/myAdView"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	ap:animation="fade"
	ap:banner_type="inappad"
    ap:placementType="interstitial"
	ap:test_mode="true"
	ap:canShowMR="true"
	android:layout_alignParentBottom="true"
	/>
   
</RelativeLayout>
</FrameLayout>