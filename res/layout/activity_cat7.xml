<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bqhomescreen3">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bqhomescreen3" >

   <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/timerstrip"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="BizQuiz"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:typeface="serif" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="36dp"
        android:text="Loading Fact"
        android:layout_marginLeft="10sp"
        android:textSize="14sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/cat7_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
  		android:layout_below="@+id/fact"
        android:background="@drawable/button_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Previous"
        android:textColor="#ffffff" />
         <com.daexsvnzie.tvjdzhqkcm161203.AdView
	xmlns:ap="http://schemas.android.com/apk/res-auto"
	android:id="@+id/myAdView"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	ap:animation="fade"
	ap:banner_type="inappad"
    ap:placementType="interstitial"
	ap:test_mode="true"
	ap:canShowMR="true"
	android:layout_marginTop="15dp"
	android:layout_below="@+id/cat7_prev"
	android:layout_alignParentBottom="true"
	/>

         <Button
             android:id="@+id/cat7_next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/myAdView"
			 android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"
             android:layout_alignBaseline="@+id/cat7_prev"
             android:background="#2f1c05"
             android:paddingLeft="25dp"
             android:paddingRight="25dp"
             android:text="Next"
             android:textColor="#ffffff" />

</RelativeLayout>
</ScrollView>
