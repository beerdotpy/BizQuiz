<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bqhomescreen3" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/timerstrip"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="BizQuiz"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stats"
            android:layout_alignBottom="@+id/stats"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:text="3:00"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buy"
        android:layout_alignBottom="@+id/buy"
        android:layout_alignLeft="@+id/previous"
        android:background="#2f1c05"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Sell"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="56dp"
        android:layout_toLeftOf="@+id/submit"
        android:text="Loading Question"
        android:textSize="14sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Answer" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/category2"
        android:layout_marginBottom="76dp"
        android:layout_toRightOf="@+id/answer"
        android:background="#2f1c05"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Buy"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buy"
        android:layout_alignBottom="@+id/buy"
        android:layout_centerHorizontal="true"
        android:background="#2f1c05"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Submit"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        android:layout_toLeftOf="@+id/answer"
        android:background="#2f1c05"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Previous"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/previous"
        android:layout_alignBottom="@+id/previous"
        android:layout_toRightOf="@+id/answer"
        android:background="#2f1c05"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Next"
        android:textColor="#ffffff" />

</RelativeLayout>